{
  "name": "arbitrage-assistant",
  "version": "0.0.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "dev": "turbo dev --parallel",
    "dev:admin": "turbo dev --filter=admin",
    "dev:hedge": "cd apps/hedge-system && npm run tauri:dev",
    "dev:ui": "turbo dev --filter=@repo/ui",
    "build": "turbo build --filter=!@repo/shared-backend",
    "lint": "turbo lint --continue",
    "lint:fix": "turbo lint -- --fix",
    "type-check": "turbo check-types --continue",
    "test": "turbo test --continue",
    "test:watch": "turbo test -- --watch",
    "release:hedge": "./scripts/release-hedge-system.sh",
    "sandbox": "echo 'ğŸ” AWS Account Check:' && aws sts get-caller-identity --query Account --output text && echo 'âœ… Expected: 183048365370' && cd packages/shared-backend && npx ampx sandbox",
    "sandbox:delete": "npx ampx sandbox delete --identifier ArbitrageAssistant-dev-sandbox",
    "clean": "turbo clean && rm -rf node_modules/.cache",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "sync:amplify": "./scripts/sync-amplify-outputs.sh",
    "haconiwa:start": "./scripts/haconiwa-start.sh",
    "haconiwa:clean": "tmux kill-session -t arbitrage-assistant 2>/dev/null || true && haconiwa space clean -c arbitrage-assistant 2>/dev/null || true",
    "haconiwa:fresh": "npm run haconiwa:clean && npm run haconiwa:start",
    "haconiwa:attach": "haconiwa space attach -c arbitrage-assistant",
    "haconiwa:attach:ceo": "haconiwa space attach -c arbitrage-assistant -r room-ceo",
    "haconiwa:attach:backend": "haconiwa space attach -c arbitrage-assistant -r room-backend",
    "haconiwa:attach:trading": "haconiwa space attach -c arbitrage-assistant -r room-trading",
    "haconiwa:attach:integration": "haconiwa space attach -c arbitrage-assistant -r room-integration", 
    "haconiwa:attach:frontend": "haconiwa space attach -c arbitrage-assistant -r room-frontend",
    "haconiwa:attach:devops": "haconiwa space attach -c arbitrage-assistant -r room-devops",
    "haconiwa:list": "haconiwa space list",
    "predev": "npm run sync:amplify",
    "postinstall": "npm run sync:amplify"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^4.5.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.2.5",
    "turbo": "^2.3.3",
    "typescript": "5.5.4",
    "vitest": "^3.1.4"
  },
  "engines": {
    "node": ">=20.15.0",
    "npm": ">=9.8.0"
  },
  "packageManager": "npm@9.8.0"
}