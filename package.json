{
  "name": "arbitrage-assistant",
  "version": "0.0.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:admin": "turbo dev --filter=admin",
    "dev:hedge": "turbo dev --filter=hedge-system",
    "dev:ui": "turbo dev --filter=@repo/ui",
    "lint": "turbo lint",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "aws:check": "echo 'ğŸ” AWS Account Check:' && aws sts get-caller-identity --query Account --output text && echo 'âœ… Expected: 183048365370'",
    "sandbox": "npm run aws:check && cd packages/shared-backend && npx ampx sandbox",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "build:css": "turbo build:css",
    "dev:css": "turbo dev:css",
    "release:hedge": "./scripts/release-hedge-system.sh"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^4.5.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.2.5",
    "turbo": "^2.3.3",
    "vitest": "^3.1.4"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "npm@9.8.0"
}