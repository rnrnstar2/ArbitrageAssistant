{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "amplify_outputs.json"],
      "outputs": ["dist/**", "out/**", ".next/**"],
      "env": ["NEXT_PUBLIC_WEBSOCKET_URL"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": ["NEXT_PUBLIC_WEBSOCKET_URL"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "dependsOn": ["@repo/shared-amplify#build"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": ["coverage/**"]
    },
    "build:css": {
      "dependsOn": ["^build:css"],
      "outputs": ["dist/**/*.css"]
    },
    "dev:css": {
      "cache": false,
      "persistent": true
    },
    "amplify:deploy": {
      "dependsOn": ["@repo/shared-backend#build"],
      "inputs": ["amplify/**", "*.ts"],
      "outputs": ["amplify_outputs.json"],
      "cache": false
    },
    "amplify:pull": {
      "cache": false
    }
  }
}
