{
  "name": "hedge-system",
  "version": "0.1.24",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:clean": "rm -rf .next && next dev",
    "dev:fresh": "rm -rf .next node_modules/.cache && next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --max-warnings 0",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:release": "tauri build --bundles updater",
    "check-types": "tsc --noEmit",
    "build:css": "echo 'CSS is built through globals.css import in Next.js'",
    "dev:css": "echo 'CSS is watched through Next.js dev server'",
    "test:websocket:latency": "vitest run --config vitest.integration.config.ts tests/integration/websocket-latency.test.ts",
    "test:mt5:integration": "vitest run --config vitest.integration.config.ts tests/integration/mt5-integration.test.ts",
    "test:api:response:time": "vitest run --config vitest.integration.config.ts tests/integration/api-response-time.test.ts", 
    "test:dll:overhead": "vitest run --config vitest.integration.config.ts tests/integration/dll-overhead.test.ts",
    "test:dll:compatibility": "vitest run --config vitest.integration.config.ts tests/integration/dll-compatibility.test.ts",
    "test:websocket:communication": "vitest run --config vitest.integration.config.ts tests/integration/websocket-communication.test.ts",
    "test:external:api": "vitest run --config vitest.integration.config.ts tests/integration/external-api.test.ts",
    "test:integration:all": "vitest run --config vitest.integration.config.ts tests/integration/"
  },
  "dependencies": {
    "@repo/shared-amplify": "*",
    "@repo/shared-auth": "*",
    "@repo/shared-types": "*",
    "@repo/ui": "*",
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/plugin-process": "^2.0.0",
    "@tauri-apps/plugin-updater": "^2.0.0",
    "lucide-react": "^0.510.0",
    "next": "15.3.2",
    "next-themes": "^0.4.6",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/prettier-config": "*",
    "@repo/typescript-config": "*",
    "@repo/vitest-config": "*",
    "@tauri-apps/cli": "^2.0.0",
    "@types/node": "^20",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "tailwindcss": "^3.4.0"
  }
}
