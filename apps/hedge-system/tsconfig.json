{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./app/*",
        "./components/*",
        "./features/*",
        "./hooks/*",
        "./utils/*"
      ]
    },
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src-tauri/bindings/*"
  ],
  "references": [
    {
      "path": "../../packages/shared-types"
    },
    {
      "path": "../../packages/shared-auth"
    },
    {
      "path": "../../packages/ui"
    }
  ],
  "exclude": [
    "node_modules"
  ]
}
