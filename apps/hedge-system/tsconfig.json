{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./app/*",
        "./components/*",
        "./features/*",
        "./hooks/*",
        "./utils/*"
      ]
    },
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "downlevelIteration": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "src-tauri/bindings/*",
    "out/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
