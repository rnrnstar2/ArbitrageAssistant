{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./components/*": {
      "import": "./dist/components/ui/*.js",
      "require": "./dist/components/ui/*.js",
      "types": "./dist/components/ui/*.d.ts"
    },
    "./lib/*": {
      "import": "./dist/lib/*.js",
      "require": "./dist/lib/*.js",
      "types": "./dist/lib/*.d.ts"
    },
    "./hooks/*": {
      "import": "./dist/src/hooks/*.js",
      "require": "./dist/src/hooks/*.js",
      "types": "./dist/src/hooks/*.d.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc && tailwindcss -i ../tailwind-config/shared-styles.css -o ./dist/index.css",
    "dev": "tsc --watch & tailwindcss -i ../tailwind-config/shared-styles.css -o ./dist/index.css --watch",
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component"
  },
  "peerDependencies": {
    "react": "^19.0.0"
  },
  "devDependencies": {
    "@repo/tailwind-config": "*",
    "@repo/typescript-config": "*",
    "@tailwindcss/cli": "^4.1.6",
    "@tailwindcss/postcss": "^4.1.6",
    "@types/node": "^22.15.3",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "eslint": "^9.26.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "^4.1.6",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-navigation-menu": "^1.2.13",
    "@radix-ui/react-slot": "^1.2.3",
    "lucide-react": "^0.510.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "^2.0.3"
  }
}
